<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Criar Anexo</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<%= render 'form', attachment: @attachment %>

<div class="modal-footer"> 
  <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
  <button type="button" data-path="<%= debt_attachments_path(@debt) %>" data-method="POST" class="btn btn-success attachment-save">Salvar</button>
</div>
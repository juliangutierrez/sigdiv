<p id="notice"><%= notice %></p>

<h1>Credores</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creditors.each do |creditor| %>
      <tr>
        <td><%= creditor.name %></td>
        <td><%= link_to 'Show', creditor %></td>
        <td><%= link_to 'Edit', edit_creditor_path(creditor) %></td>
        <td><%= link_to 'Destroy', creditor, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar credor', new_creditor_path %>

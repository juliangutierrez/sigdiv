<p id="notice"><%= notice %></p>

<h1>Transaction Types</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Operator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_types.each do |transaction_type| %>
      <tr>
        <td><%= transaction_type.name %></td>
        <td><%= transaction_type.operator %></td>
        <td><%= link_to fa_icon("eye 2x", title: "Mostrar"), transaction_type %></td>
        <td><%= link_to fa_icon("edit 2x", title: "Editar"), edit_transaction_type_path(transaction_type) %></td>
        <td><%= link_to fa_icon("trash 2x", title: "Remover"), transaction_type, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction Type', new_transaction_type_path, class: "btn btn-success pull-right" %>

<p id="notice"><%= notice %></p>

<h1>Dívidas</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Código</th>
      <th>Valor do contrato</th>
      <th>Data da assinatura</th>
      <th>Credor</th>
      <th>Prazo de carência</th>
      <th>Prazo de amortização</th>
      <th>Objetivo da operação</th>
      <th>Próxima parcela</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.code %></td>
        <td><%= debt.contract_value_cents %></td>
        <td><%= debt.signature_date %></td>
        <td><%= debt.creditor_id %></td>
        <td><%= debt.grace_period %></td>
        <td><%= debt.amortization_period %></td>
        <td><%= debt.purpose %></td>
        <td><%= debt.next_instalment %></td>
        <td><%= link_to fa_icon("eye 2x", title: "Mostrar"), debt %></td>
        <td><%= link_to fa_icon("edit 2x", title: "Editar"), edit_debt_path(debt) %></td>
        <td><%= link_to fa_icon("trash 2x", title: "Remover"), debt, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar dívida', new_debt_path, class: 'btn btn-success pull-right' %>

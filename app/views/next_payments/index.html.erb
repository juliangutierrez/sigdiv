<p id="notice"><%= notice %></p>

<h1>Próximos pagamentos</h1>

<% if @debts.blank? %>

  <p class="text-center"><span class="mr-sm-2"><%= fa_icon("exclamation-triangle 2x") %></span>Não foram encontradas operações.</p>

<% else %>

  <table class='table table-striped table-hover'>
    <thead>
      <tr>
      	<th>Data do pagamento</th>
        <th>Código</th>
        <th>Identificador</th>
        <th>Credor</th>
        <th>Status</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @debts.each do |debt| %>
        <tr>
        	<td><%= debt.payment_date %></td>
          <td><%= debt.code %></td>
          <td><%= debt.name %></td>
          <td><%= debt.creditor.name %></td>
          <td><%= debt.status %></td>
          <td><%= link_to fa_icon("list 2x", title: "Mostrar contrato"), debt %></td>
          <td>
          	<%= link_to fa_icon("check-square 2x", title: "Registrar pagamento"), '#', data: { path: new_debt_transaction_path(debt, type: 'Payment'), toggle: :modal, target: "#transactionModal" }, class: 'new-payment' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<div class="modal fade" id="transactionModal" tabindex="-1" role="dialog" aria-labelledby="EdiçãoTransação" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">      
    </div>
  </div>
</div>

<script type="text/javascript">
	initTransactionActions();
</script>
